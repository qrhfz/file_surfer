        "operationId": "get-access-token",
        "description": "Ask for token to access file download etc",
        "security": [
          {
            "token": []
          }
        ]
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {
      "File": {
        "title": "File",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "pattern": "^\\w+\\/\\w+$",
            "example": "text/plain"
          },
          "location": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          },
          "modified": {
            "type": "string",
            "format": "date-time"
          },
          "url": {
            "type": "string"
          },
          "isDir": {
            "type": "boolean"
          },
          "contentCount": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "name",
          "type",
          "location",
          "size",
          "modified",
          "url",
          "isDir"
        ]
      },
      "BaseUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          }
        }
      },
      "User": {
        "allOf": [
          {
            "properties": {
              "id": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "username",
              "role"
            ]
          },
          {
            "$ref": "#/components/schemas/BaseUser"
          }
        ]
      },
      "NewUser": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseUser"
          },
          {
            "type": "object",
            "properties": {
              "password": {
                "type": "string"
              }
            },
            "required": [
              "username",
              "role",
              "password"
            ]
          }
        ]
      },
      "UpdateUser": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseUser"
          },
          {
            "type": "object",
            "properties": {
              "password": {
                "type": "string"
              }
            }
          }
        ]
      },
      "Role": {
        "title": "Role",
        "type": "string",
        "enum": [
          "admin",
          "basic"
        ]
      }
    },
    "securitySchemes": {
      "token": {
        "type": "http",
        "scheme": "bearer"
      },
      "accessToken": {
        "name": "accessToken",
        "type": "apiKey",
        "in": "query"
      }
    },
    "requestBodies": {
      "PasteRequest": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "sources": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "destination": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}